{
  "name": "root",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "pnpm --recursive --parallel run dev",
    "dev:web": "pnpm --filter @monorepo/web run dev",
    "dev:api": "pnpm --filter @monorepo/api run dev",
    "build": "pnpm --recursive run build",
    "build:api": "pnpm --filter !./apps/web --recursive run build",
    "build:web": "pnpm --filter !./apps/api --recursive run build",
    "start:api": "pnpm --filter @monorepo/api run start",
    "prepare": "husky",
    "type-check": "pnpm --recursive run type-check",
    "clear": "bash scripts/prune.sh",
    "dev:setup": "pnpm install && pnpm build && pnpm db:generate",
    "prettier": "npx prettier apps/*/** --write --verbose",
    "lint": "eslint \"apps/**/*.{js,ts,jsx,tsx}\"",
    "db:migrate": "NODE_ENV=development pnpm --filter @monorepo/database db:migrate:dev",
    "db:generate": "NODE_ENV=development pnpm --filter @monorepo/database db:generate:dev",
    "db:migrate:prod": "NODE_ENV=production pnpm --filter @monorepo/database db:migrate:prod",
    "db:generate:prod": "NODE_ENV=production pnpm --filter @monorepo/database db:generate:prod",
    "db:studio": "pnpm --filter @monorepo/database run db:studio",
    "db:reset": "pnpm --filter @monorepo/database run db:reset",
    "generate:env-api": "node ./scripts/generate-env-types.mjs ./apps/api",
    "generate:env-web": "node ./scripts/generate-env-types.mjs ./apps/web",
    "gen-envs": "pnpm generate:env-api && pnpm generate:env-web"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@tanstack/router-plugin": "^1.134.12",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript-eslint": "^8.46.2"
  }
}